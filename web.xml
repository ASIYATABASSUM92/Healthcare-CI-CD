<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    WEB.XML - Web Application Deployment Descriptor
    
    PURPOSE: Configures how the web application behaves
    
    WHY NEEDED: Tells Tomcat:
    - Which servlets exist
    - What URLs map to which servlets
    - Application name and description
-->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- APPLICATION INFORMATION -->
    <display-name>Healthcare Management System</display-name>
    <description>
        Enterprise Healthcare Management System with complete CI/CD pipeline
    </description>
    
    <!-- SERVLET DEFINITION -->
    <!-- Defines our servlet and gives it a name -->
    <servlet>
        <servlet-name>HealthcareServlet</servlet-name>
        <!-- Full class name of our servlet -->
        <servlet-class>com.healthcare.HealthcareServlet</servlet-class>
        <!-- Load on startup (1 = load immediately when Tomcat starts) -->
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <!-- SERVLET MAPPING -->
    <!-- Maps URL patterns to our servlet -->
    <!-- WHY: When user visits these URLs, Tomcat forwards request to our servlet -->
    <servlet-mapping>
        <servlet-name>HealthcareServlet</servlet-name>
        <!-- / means root URL: http://server:8080/healthcare/ -->
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <!-- WELCOME FILE LIST -->
    <!-- Default file to serve when accessing directory -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- SESSION CONFIGURATION -->
    <!-- Session timeout in minutes -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
</web-app>
